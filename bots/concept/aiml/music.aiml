<aiml version="2.0">
    <category>
        <pattern><concept>music | sports</concept></pattern>
        <template>
            Do you want to talk about music?
            <oob><robot></robot></oob>
        </template>
    </category>

    <category>
        <pattern><concept>sports | music </concept></pattern>
