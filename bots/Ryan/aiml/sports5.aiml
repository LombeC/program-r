<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

    <category>
        <pattern># Olympics ^</pattern>
        <that>Do you want to talk about basketball, baseball, football, hockey or the olympics?</that>
        <template>
          <think><set name="topic">olympics</set></think>
            <set name="most recent dialogue question">What do you think is the most impressive olympic sport?</set>
            <oob>
                <robot></robot>
            </oob>
        </template>
    </category>

    <topic name="olympics">

    <category>
        <pattern><set>OlympicSports</set></pattern>
        <that>What do you think is the most impressive olympic sport?</that>
        <template>
            I certaintly couldn't do <star />, that's for sure!
            <set name="most recent dialogue question">Do you think you'd be any good at it? On a scale of one to ten.</set>
            <oob>
                <robot></robot>
            </oob>
        </template>
    </category>

    <category>
